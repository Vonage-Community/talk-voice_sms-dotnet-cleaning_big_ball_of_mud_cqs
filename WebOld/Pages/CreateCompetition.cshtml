@page "createcompetition"
@model Web.Pages.CreateCompetitionModel
@{
    ViewData["Title"] = "Create Competition";
}
<div class="container">
    <h1 class="display-4">Create Competition</h1>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <button type="button" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-6">
            @ViewData["Errors"]
        </div>
    </div>
</div>
